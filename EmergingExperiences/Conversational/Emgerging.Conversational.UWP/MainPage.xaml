            </controls:DropShadowPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Lwin" Foreground="Black" FontSize="24" FontWeight="ExtraBlack"/>
                    <TextBlock Text="Maung" Margin="4,0,0,0" Foreground="Black" FontSize="24" FontWeight="ExtraLight"/>
                </StackPanel>
            </StackPanel>
            <TextBlock x:Name="DateField" Text="Thursday, March 05, 2020" Margin="4,0,0,0" Foreground="Black" FontSize="24" FontWeight="ExtraLight" HorizontalAlignment="Center"/>
            
